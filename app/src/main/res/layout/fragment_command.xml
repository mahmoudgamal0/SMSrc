<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commands.views.fragments.CommandFragment">

    <Button
        android:id="@+id/play_sound_button"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:text="@string/play_sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change_mode_button"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="@string/change_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_sound_button" />

    <Button
        android:id="@+id/lock_phone_button"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="@string/lock_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_mode_button" />

    <Button
        android:id="@+id/wipe_data_button"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="@string/wipe_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_phone_button" />

    <Button
        android:id="@+id/encrypt_storage_button"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="@string/encrypt_storage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wipe_data_button" />

    <Button
        android:id="@+id/disable_camera_button"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="@string/disable_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encrypt_storage_button" />

</androidx.constraintlayout.widget.ConstraintLayout>